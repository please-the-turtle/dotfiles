set selection-clipboard clipboard
set adjust-open "width"
set window-title-basename true
set window-title-page true
set statusbar-basename true
#set guioptions n

####### COLOR SCHEME #######
set notification-error-bg       "#0b0e14" # bg
set notification-error-fg       "#ff3333" # bright:red
set notification-warning-bg     "#0b0e14" # bg
set notification-warning-fg     "#e6c446" # bright:yellow
set notification-bg             "#0b0e14" # bg
set notification-fg             "#b8cc52" # bright:green

set completion-bg               "#323232" # bg2
set completion-fg               "#e5e1cf" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#928374" # gray
set completion-highlight-bg     "#36a3d9" # bright:blue
set completion-highlight-fg     "#323232" # bg2

# Define the color in index mode
set index-bg                    "#323232" # bg2
set index-fg                    "#e5e1cf" # fg
set index-active-bg             "#36a3d9" # bright:blue
set index-active-fg             "#323232" # bg2

set inputbar-bg                 "#282828" # bg
set inputbar-fg                 "#e5e1cf" # fg

set statusbar-bg                "#323232" # bg2
set statusbar-fg                "#e5e1cf" # fg

set highlight-color             "#e6c446" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#0b0e1433" # bg
set default-fg                  "#e5e1cf" # fg
set render-loading              true
